<UserControl x:Class="UI.Controls.NotifyError.NotifyError"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" >
    <Border Padding="5" BorderThickness="1" BorderBrush="LightBlue" Background="White">
        <StackPanel Orientation="Horizontal">
            <Image Height="32" Width="32" Source="notification.png"></Image>
            <TextBlock Name="MessageLabel" Margin="10,0,0,0" Width="150" TextWrapping="Wrap" VerticalAlignment="Center"></TextBlock>
        </StackPanel>
    </Border>
</UserControl>
